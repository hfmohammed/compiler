{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Gazprea Compiler (Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.o",
      "args": ["src/test.hy"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"  // optional, see next step
    }
  ]
}
